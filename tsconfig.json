{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}